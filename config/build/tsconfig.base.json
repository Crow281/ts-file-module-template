//This tsconfig file is the base for the project tsconfig files.
//Used to define the compiler options they are using.
//Note that TSC is only being used to create the Type Definition files.
//The actual module transpiling is being handled by Rollup and Babel.
{
    //How to compile.
    "compilerOptions": {
        //Modules:
        //Type of module being generated.
        //Since actual modules are being built by Babel,
        //this is technically irrelevant.
        "module": "esnext",
        //How to lookup modules.
        //Since we build in a node environment, use node.
        "moduleResolution": "node10",
        //Enable importing JSON.
        "resolveJsonModule": true,

        //JavaScript Support:
        //JavaScript is allowed.
        "allowJs": true,
        //Check whether Types are used correctly in JavaScript source files.
        "checkJs": true,

        //Type Checking:
        //Enforce strict type checking.
        "strict": true,
        //Trigger failure if there are variables that
        //are not and cannot be used.
        "noUnusedLocals": true,

        //Interop Constraints:
        //Force user to NOT use case-insensitivity when importing.
        "forceConsistentCasingInFileNames": true,
        //Makes it easier to import CommonJS modules into ES Modules.
        "esModuleInterop": true,

        //Emit:
        //Generate TypeScript definitions.
        "declaration": true,
        //Create maps indicating how definition files link back
        //to the original source code.
        "declarationMap": true,
        //Since we are using Babel for transpiling,
        //the TypeScript compiler only needs to output the definitions.
        "emitDeclarationOnly": true,
        //Indicate where to output the transpiled code.
        //Since code is being transpiled with Babel instead of TSC,
        //and outDir interferes with declarationDir when using
        //composite, comment out outDir.
        //"outDir": "../../dist",
        //Create maps linking built files back to source.
        //Not relevant since we are only building declarations.
        "sourceMap": false,

        //Language and Environment:
        //Type of JSX code being generated.
        //Set to let user use the React library.
        "jsx": "react",
        //List of libraries the project is using.
        "lib": [
            //Standard JavaScript APIs up to year 2022.
            "es2022",

            //Web library, giving access to stuff like Window, Document, etc.
            "dom"
        ],
        //JavaScript language version being transpiled to.
        //Determines the minimum JavaScript version user requires.
        "target": "es2022",

        //If true, tells the compiler that this is only 1 part of a larger
        //project and it should keep track of what has been built.
        "composite": false
    }
}
