//This file is used to generate the TypeScript definitions of the project.
//The only functional difference between this file and tsconfig.json is that
//this file excludes the test scripts.
{
    //Extended build file. Records the desired compiler options.
    "extends": "./config/build/tsconfig.base.json",

    //List of folders to be built.
    "include": [
        //Include type definitions for custom file formats.
        "./config/build/types/**/*",

        //Build the source folder.
        "./src/**/*"
    ],

    //List of folders to NOT be built.
    "exclude": [
        //Do not include NPM modules in the build.
        "**/node_modules/**",

        //Do not include test scripts in the build.
        "**/__tests__/**",
    ],

    //How to compile.
    "compilerOptions": {
        //Use the project src folder as the base URL.
        "baseUrl": "./src",

        //Use source as the root so that the
        //source folder itself is not output to dist.
        "rootDir": "./src",

        //Indicate where to output the TypeScript definitions.
        "declarationDir": "./dist",
    }
}